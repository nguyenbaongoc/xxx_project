
    <h1>Welcome to <%= @user.name %>'s page</h1>
			<div class="wrapper style1">

				<!-- Header -->
					

				<!-- Banner -->
				

				<!-- Extra -->
					<div id="extra">
						<div class="container">
    <% @user.images.each do |image| %>
    		    <div class="row no-collapse-1">
		<% if image.id % 3 == 1 %>

		    <section class="4u"> 
		        <a href= <%= image.file %> >
		        <%= link_to image_tag(image.file, :size => "300x400", :crop => :fill), image %>
			    </a>
			    <div class="box">
				    <%= link_to like_image_path(image),  class: "like", method: :put do %>
                    <button type="button" class="btn btn-default" aria-label="Left Align">
                    <span class="glyphicon glyphicon-thumbs-up glyphicon-align-center" aria-hidden="true"></span>
                    <span class="badge"><%= image.get_upvotes.size %></span>
                    </button>
                    <% end %>

                    <%= link_to unlike_image_path(image), class: "like", method: :put do %>
                    <button type="button" class="btn btn-default" aria-label="Left Align"> 
                    <span class="glyphicon glyphicon-thumbs-down glyphicon-align-center" aria-hidden="true"></span>
                    <span class="badge"><%= image.get_downvotes.size %></span>
                    </button>  
                    <% end %>
            	    <h3> <%= image.title %></h3>
                </div>
		    </section>
								    
		<% else if image.id % 3 == 2 %>
		    <section class="4u"> 
		     	<a href= <%= image.file %> >
				<%= link_to image_tag(image.file, :size => "300x400", :crop => :fill), image %>
				</a>
				<div class="box">
					<%= link_to like_image_path(image),  class: "like", method: :put do %>
                    <button type="button" class="btn btn-default" aria-label="Left Align">
                    <span class="glyphicon glyphicon-thumbs-up glyphicon-align-center" aria-hidden="true"></span>
                    <span class="badge"><%= image.get_upvotes.size %></span>
                    </button>
                    <% end %>

                    <%= link_to unlike_image_path(image), class: "like", method: :put do %>
                    <button type="button" class="btn btn-default" aria-label="Left Align"> 
                    <span class="glyphicon glyphicon-thumbs-down glyphicon-align-center" aria-hidden="true"></span>
                    <span class="badge"><%= image.get_downvotes.size %></span>
                    </button>  
                    <% end %>
            		<h3> <%= image.title %></h3>
                </div>
			</section>
		<% else %>
		    <section class="4u"> 
	    		<a href= <%= image.file %> >
				<%= link_to image_tag(image.file, :size => "300x400", :crop => :fill), image %>
				</a>
				<div class="box">
					<%= link_to like_image_path(image),  class: "like", method: :put do %>
                    <button type="button" class="btn btn-default" aria-label="Left Align">
                    <span class="glyphicon glyphicon-thumbs-up glyphicon-align-center" aria-hidden="true"></span>
                    <span class="badge"><%= image.get_upvotes.size %></span>
                    </button>
                    <% end %>

                    <%= link_to unlike_image_path(image), class: "like", method: :put do %>
                    <button type="button" class="btn btn-default" aria-label="Left Align"> 
                    <span class="glyphicon glyphicon-thumbs-down glyphicon-align-center" aria-hidden="true"></span>
                    <span class="badge"><%= image.get_downvotes.size %></span>
                    </button>  
                    <% end %>
				    <h3> <%= image.title %></h3>
                </div>
    	    </section>
								  
	        </div>
        <br>
	    <br>
	    <% end %>
	    <% end %>
