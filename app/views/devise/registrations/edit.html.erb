<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-input">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, class: 'col-sm-8 control-label', placeholder: "Enter your Name" %><br />
  </div>
  <div class="form-input">
    <%= f.label :age %><br />
    <%= f.number_field :age,autofocus: true, class: 'col-sm-8 control-label', placeholder: "Age" %><br />
  </div>
  <div class="form-input">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, type:"email", class: 'col-sm-8 control-label', placeholder: "Enter your Email" %><br />
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-input">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off",class: 'col-sm-8 control-label',type:"password",placeholder:"Enter your password" %><br />
  </div>

  <div class="form-input">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off",class: 'col-sm-8 control-label',type:"password",placeholder:"Enter your password" %><br />
  </div>

  <div class="form-input">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off",class: 'col-sm-8 control-label',type:"password",placeholder:"Enter your password" %><br />
  </div>

  <div class="form-action">
    <%= f.submit "Update" , class:"btn btn-lg btn-primary btn-block"%>
  </div>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete ,  class:"btn btn-lg btn-primary"%></p>

<%= link_to "Back", :back %>
